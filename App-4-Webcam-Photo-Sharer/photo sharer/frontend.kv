<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 9
        spacing: 9
        Camera:
            id: camera
            resolution: (640, 480)
            press: root.__call__()
            texture: None
            opacity: 0
        Button:
            id : camera_button
            text: 'Start Camera'
            size_hint_y: 0.09
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: r'images\normal.png'
            background_down: r'images\down.png'
        Button:
            text: 'Capture'
            id: capture_button
            on_press: root.capture()
            size_hint_y: 0.09
            background_normal: r'images\normal.png'
            background_down: r'images\down.png'

<ImageScreen>:
    GridLayout:
        padding: 9
        spacing: 9
        cols: 1
        Image:
            id: img
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.08
            background_normal: r'images\normal.png'
            background_down: r'images\down.png'
            on_press: root.create_link()
        Label:
            id: link_label
            size_hint_y: 0.08
            text: ''
        GridLayout:
            cols: 2
            size_hint_y: 0.08
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: r'images\normal.png'
                background_down: r'images\down.png'
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: r'images\normal.png'
                background_down: r'images\down.png'

<RootWidget>:
    canvas.before:
        Color:
            rgba: (0, 0.627, 0.769, 0.8)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'