<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            play: False
            resolution: (640, 480)
            texture: None
        Button:
            id : camera_button
            text: 'Start Camera'
            size_hint_y: 0.08
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture'
            size_hint_y: 0.08

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'